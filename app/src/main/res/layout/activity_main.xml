<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Calculadora Distribución T-Student"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Entrada para grados de libertad -->
        <EditText
            android:id="@+id/inputGrados"
            android:hint="Grados de libertad (v)"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Entrada para alfa -->
        <EditText
            android:id="@+id/inputAlfa"
            android:hint="Valor de alfa (ej. 0.05)"
            android:inputType="numberDecimal"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Botón para buscar T -->
        <Button
            android:id="@+id/btnBuscarT"
            android:text="Obtener Valor T"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Separador -->
        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp" />

        <!-- Entrada para valor T -->
        <EditText
            android:id="@+id/inputValorT"
            android:hint="Valor de T (ej. 2.131)"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Botón para buscar Alfa -->
        <Button
            android:id="@+id/btnBuscarAlfa"
            android:text="Obtener Valor Alfa"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Texto para mostrar resultado -->
        <TextView
            android:id="@+id/txtResultado"
            android:text="Resultado aparecerá aquí"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>